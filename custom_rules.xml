<?xml version="1.0" encoding="utf-8"?>
<project>
    <macrodef name="convert">
        <attribute name="dpi"/>
        <attribute name="size"/>
        <sequential>
            <exec executable="convert">
                <arg value="icon/ic_launcher.png"/>
                <arg value="-thumbnail"/>
                <arg value="@{size}x"/>
                <arg value="res/drawable-@{dpi}dpi/ic_launcher.png"/>
            </exec>
        </sequential>
    </macrodef>

    <target name="icon">
        <convert dpi="m" size="48"/>
        <convert dpi="h" size="72"/>
        <convert dpi="xh" size="96"/>
        <convert dpi="xxh" size="144"/>
    </target>
</project>
